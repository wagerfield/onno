{
  "private": true,
  "name": "onno-repo",
  "version": "0.0.4",
  "license": "MIT",
  "author": "Matthew Wagerfield <matthew@wagerfield.com>",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tslint 'packages/**/*.ts' --format codeFrame",
    "lint:fix": "yarn lint --fix",
    "format": "prettier '**/*.{json,js,ts,md}'",
    "format:check": "yarn format --check",
    "format:write": "yarn format --write",
    "clean": "rimraf coverage 'packages/**/{cjs,esm,lib}'",
    "build": "lerna exec tsc",
    "bundle": "rollup --config",
    "release": "lerna publish",
    "prepublishOnly": "yarn clean && yarn build && yarn bundle"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "jest --findRelatedTests",
      "git add"
    ],
    "**/*.{json,js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "snapshotResolver": "<rootDir>/snapshots",
    "coveragePathIgnorePatterns": [
      "test-utils"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "7.6.1",
    "@commitlint/config-conventional": "7.6.0",
    "@types/jest": "24.0.12",
    "glob": "7.1.4",
    "husky": "2.2.0",
    "jest": "24.8.0",
    "lerna": "3.13.4",
    "lint-staged": "8.1.6",
    "prettier": "1.17.1",
    "rimraf": "2.6.3",
    "rollup": "1.11.3",
    "rollup-plugin-prettier": "0.6.0",
    "rollup-plugin-size-snapshot": "0.8.0",
    "rollup-plugin-typescript": "1.0.1",
    "ts-jest": "24.0.2",
    "tslib": "1.9.3",
    "tslint": "5.16.0",
    "typescript": "3.4.5"
  }
}
