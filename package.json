{
  "private": true,
  "name": "onno-repo",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Matthew Wagerfield <matthew@wagerfield.com>",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:codecov": "codecov",
    "lint": "tslint 'packages/**/*.ts' --format codeFrame",
    "lint:fix": "yarn lint --fix",
    "format": "prettier '**/*.{json,js,ts,md}'",
    "format:check": "yarn format --check",
    "format:write": "yarn format --write",
    "copy": "cpx readme.md packages/onno && cpx readme.md packages/onno-app",
    "clean": "rimraf coverage reports 'packages/**/{cjs,esm,lib,types,.nuxt}'",
    "types": "lerna exec --ignore onno-app -- tsc --emitDeclarationOnly",
    "build": "lerna exec --ignore onno-app -- tsc",
    "setup": "lerna bootstrap",
    "bundle": "rollup --config",
    "release": "lerna publish",
    "preflight": "yarn clean && yarn types && yarn bundle && yarn format:write",
    "prepublishOnly": "yarn preflight"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "jest --findRelatedTests",
      "git add"
    ],
    "**/*.{json,js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@types/jest": "24.0.13",
    "codecov": "3.5.0",
    "cpx": "1.5.0",
    "glob": "7.1.4",
    "husky": "2.4.0",
    "jest": "24.8.0",
    "jest-junit": "6.4.0",
    "lerna": "3.14.1",
    "lint-staged": "8.2.0",
    "prettier": "1.18.0",
    "rimraf": "2.6.3",
    "rollup": "1.14.3",
    "rollup-plugin-prettier": "0.6.0",
    "rollup-plugin-size-snapshot": "0.9.0",
    "rollup-plugin-typescript": "1.0.1",
    "ts-jest": "24.0.2",
    "tslib": "1.9.3",
    "tslint": "5.17.0",
    "typescript": "3.5.1"
  }
}
