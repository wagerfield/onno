{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull", "pnpm lint", "pnpm test"],
    "after:bump": "pnpm auto-changelog --package"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}
