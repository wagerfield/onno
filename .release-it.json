{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull", "pnpm lint", "pnpm test"],
    "before:release": ["pnpm clean", "pnpm build"],
    "after:bump": "pnpm changelog"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}
